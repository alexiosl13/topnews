<html>
<head>
  <meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>
  <title>Top News</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<nav class="navbar">
  <div class="navbar-inner">
    <div class="navbar-container">
      <div class="navbar-brand">
        <h1 class="navbar-logo">Top News</h1>
      </div>
      <div class="navbar-links">
        <ul>
          <li><%= link_to 'Home', top_stories_index_path %></li>
          <li><%= link_to 'Flagged Stories', flagged_stories_path %></li>
          <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :get } %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</nav>

<p class="notice">
  <%= notice %>
</p>
<p class="alert">
  <%= alert %>
</p>
<%= yield %>
</body>
</html>
